<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardBackgroundColor="@color/colorAdCard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_15sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/appfont_bold"
            android:gravity="center"
            android:maxLines="2"
            android:text="Ad Loading Please Wait"
            android:textColor="@color/colorAdBlack"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progress_circular"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center_horizontal"
                android:indeterminate="true"
                app:indicatorColor="@color/colorAdColor"
                app:indicatorSize="56dp"
                app:trackColor="@color/colorAdCard"
                app:trackCornerRadius="3dp"
                app:trackThickness="5dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/ad"
                android:textColor="#79000000"
                android:visibility="gone" />
        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/appfont_bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:text="Wait a moment.."
            android:textColor="@color/colorAdBlack" />
    </LinearLayout>
</androidx.cardview.widget.CardView>