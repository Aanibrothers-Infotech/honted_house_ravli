<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#34353C"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="@dimen/_10dp"
        android:background="@drawable/bg_strok"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/region_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:src="@drawable/us" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/region_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/appfont_bold"
                android:text="United Status"
                android:textColor="@color/colorAdWhite"
                android:textSize="14sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/btnChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/bg_strok"
            android:fontFamily="@font/appfont_bold"
            android:paddingHorizontal="18dp"
            android:paddingVertical="@dimen/_10dp"
            android:text="CONNECT"
            android:textAllCaps="true"
            android:textColor="@color/colorAdWhite"
            android:textSize="10dp" />


    </LinearLayout>

</FrameLayout>
